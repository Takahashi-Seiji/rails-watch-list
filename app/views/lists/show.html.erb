<h1>SHOW LIST</h1>

<%= @list.name %>
<%= link_to 'Add movie', new_list_bookmark_path(@list) %>
<ul>
  <% @reviews.each do |review| %>
  <li><%= review.comment %></li>
  <% end %>
</ul>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
  <li><%= bookmark.movie.title %></li>
  <li><%= bookmark.comment %></li>
  <li><%= link_to 'Delete', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></li>
  <% end %>
</ul>
